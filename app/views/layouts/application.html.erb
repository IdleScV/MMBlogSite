<!DOCTYPE html>
<html>
  <head>
    <title>MLBlogSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="header">
      <% if session[:user_id] %>
        <h4>Welcome 
          <%= current_user %>
        </h4>
      <% end %>
    </div>
  <br>
    <%= yield %>
  <br>
    <% if session[:user_id] %>
        <span><%= link_to "Logout", logout_path %></span>
      <% else %>
        <span><%= link_to "Login", login_path %></span>
    <% end %>
  </body>
</html>
