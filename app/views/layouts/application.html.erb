<!DOCTYPE html>
<html>
  <head>
    <title>MLBlogSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="navbar">
      <div>
          <%= link_to "Homepage", homepage_path%>
      </div>
      <div>
          <%= link_to "Blogs", blogs_path%>
      </div>
      <div class="dropdown">
          <button class="dropbtn">App
            <i class="fa fa-caret-down"></i>
          </button>
          <div class="dropdown-content">
            <%= link_to "App 1", applet_path(1)%>
            <%= link_to "App 2", applet_path(2)%>
            <%= link_to "App 3", applet_path(3)%>
          </div>
      </div>
      <div>
          <%= link_to "Users", users_path %>
      </div>
      <div >
          <%if session[:user_id]%>
              <%= link_to "My Profile", user_path(User.find(session[:user_id]))%>
          <%end%>
      </div>
      <div>
        <% if session[:user_id] %>
          <div>
            <%= link_to "Logout", logout_path %>
          </div>
          <% else %>
          <div>
            <%= link_to "Login", login_path %>
          </div>
        <% end %>
      </div>
    </div>
  <br>
    <div class="views">

      <%= yield %>

    </div>
  <br>
  </body>
</html>
