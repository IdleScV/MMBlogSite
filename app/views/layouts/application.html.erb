<!DOCTYPE html>
<html>
  <head>
    <title>MLBlogSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="nav">
      <% if session[:user_id] %>
        <div>Welcome <%= current_user.username %></div>
        <span><%= link_to "Logout", logout_path %></span>
        <% else %>
        <span><%= link_to "Login", login_path %></span>
      <% end %>
    </div>
    <div>
        <%= link_to "Blogs", blogs_path%>
    </div>
    <div>
        <%= link_to "Applets", applets_path%>
    </div>
    <div>
        <%if session[:user_id]%>
            <%= link_to "Profile", user_path(User.find(session[:user_id]))%>
        <%end%>
    </div>
    <div>
        <%= link_to "Users", users_path %>
    </div>
  <br>
    <div class="views">

      <%= yield %>

    </div>
  <br>
  </body>
</html>
