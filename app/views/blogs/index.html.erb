
<div class="container p-5">
    
    <div class="row">
        <div class="col-sm btn-group-vertical">


            <div>
                <div class="d-flex">
                    <div class="p-2"><h2>All Blogs</h2></div>
                    <div class="ml-auto p-2"><%=link_to "+ New Blog", new_blog_path, class: "btn btn-secondary"%></div>
                </div>
            </div>





            <% @blogs.each do |blog| %>
                    <a href="<%=blog_path(blog)%>" class="btn m-2 container rounded shadow">
                        <h4 class="col-mid-auto "><%=blog.title%></h4>
                        <div class="d-flex">
                            <div class="mr-auto p-2 badge"><%=blog.user.name%></div>
                            <div class="p-2 badge"><%=blog.created_at.strftime("Posted on %m/%d/%Y")%></div>
                            <div class="p-2 badge"><%=blog.comments.count%>üí¨</div>
                            <div class="p-2 badge"><%=blog.likes.count%>üëç</div>
                        </div>
                    </a>
            <% end %>
        </div>
    </div>
    
</div>


